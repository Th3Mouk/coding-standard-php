{
    "name": "youdot/coding-standard",
    "description": "The coding standard applying to all Youdot PHP projects",
    "keywords": [
        "youdot",
        "coding",
        "standard",
        "cs",
        "code",
        "style",
        "sniffer",
        "rules",
        "sniffs",
        "checks"
    ],
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémy Marodon",
            "email": "marodon.jeremy@gmail.com"
        }
    ],
    "require": {
        "doctrine/coding-standard": "^7.0",
        "phpstan/phpdoc-parser": "^0.4.1",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.7"
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.2",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Youdot\\": "Youdot"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Youdot\\": "tests/Youdot"
        }
    }
}
